{
  "name": "nfive-hub",
  "version": "1.0.0",
  "description": "Hub for NFive plugin repositories hosted via Github",
  "license": "GPL-3.0",
  "repository": "NFive/hub",
  "homepage": "https://nfive.io/",
  "bugs": {
    "url": "https://github.com/NFive/hub/issues"
  },
  "keywords": [
    "nfive",
    "nfive-plugins",
    "plugin-repository"
  ],
  "main": "server.js",
  "scripts": {
    "watch": "nodemon -L -e js,json,pug",
    "lint": "eslint . && pug-lint ./views",
    "test": "jest --detectOpenHandles --forceExit",
    "watch-test": "jest --watch --detectOpenHandles"
  },
  "engines": {
    "node": ">=10.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^16.14.0",
    "config": "^3.0.1",
    "cron": "^1.6.0",
    "koa": "^2.7.0",
    "koa-compress": "^3.0.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.0.1",
    "koa-router": "^7.2.1",
    "koa-static-cache": "^5.1.1",
    "koa-views": "^6.1.5",
    "lodash": "^4.17.11",
    "marked": "^0.6.0",
    "marked-sanitizer-github": "^1.0.0",
    "moment": "^2.24.0",
    "mongoose": "^5.4.8",
    "node-fetch": "^2.3.0",
    "numeral": "^2.0.6",
    "octicons": "^8.3.0",
    "pug": "^2.0.3",
    "semver": "^5.6.0"
  },
  "devDependencies": {
    "eslint": "^5.12.1",
    "jest": "^23.6.0",
    "jest-extended": "^0.11.1",
    "nodemon": "^1.18.9",
    "pug-lint": "^2.3.0",
    "supertest": "^3.4.2"
  },
  "jest": {
    "testEnvironment": "node",
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup.js",
    "collectCoverage": true
  }
}
