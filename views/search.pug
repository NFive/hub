extends layout

block content
	.row
		.col-sm-6
			h2.mb-5 #{results.length} plugins found
			h2.mb-5 #{page}
		.col-sm-6
			nav(aria-label='Search Results Pages')
				ul.pagination.justify-content-end
					li.page-item.disabled
					a.page-link(href='#') Previous
					li.page-item
					a.page-link(href='#') 1
					li.page-item
					a.page-link(href='#') 2
					li.page-item
					a.page-link(href='#') 3
					li.page-item
					a.page-link(href='#') Next
	hr

	each plugin in results
		.row
			.col-sm-8
				div.align-middle
					a(href="/" +  plugin.name) #{plugin.name}
			.col-sm-1.text-center
				div
					a(href=plugin.gh_url + "/releases/tag/" + plugin.releases[0].tag) #{plugin.releases[0].tag}
					p version
			.col-sm-1.text-center
				div
					a(href=plugin.gh_url + "/stargazers") #{plugin.counts.stars}
					p stars
			.col-sm-1.text-center
				div
					a(href=plugin.gh_url + "/watchers") #{plugin.counts.watchers}
					p watchers
			.col-sm-1.text-center
				div
					a(href="/" +  plugin.name) #{plugin.project_downloads}
					p installs
	hr
